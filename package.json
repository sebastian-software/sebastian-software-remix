{
  "name": "sebastian-software-remix",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "check-types": "tsc",
    "lint": "eslint .",
    "fix": "eslint --fix .; prettier --write .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "opt:svg": "svgo --folder app --recursive",
    "update:latest": "ncu --deep  --upgrade --interactive",
    "update:minor": "ncu --deep  --upgrade --interactive --target minor",
    "update:pnpm": "corepack up"
  },
  "dependencies": {
    "@remix-run/node": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "@remix-run/serve": "^2.10.3",
    "clsx": "^2.1.1",
    "isbot": "^5.1.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@effective/color": "^1.0.1",
    "@effective/css-reset": "^3.1.0",
    "@effective/eslint-config": "^5.4.7",
    "@remix-run/dev": "^2.10.3",
    "@storybook/react": "^8.2.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/css": "^1.15.3",
    "@vanilla-extract/vite-plugin": "^4.0.13",
    "@vercel/remix": "^2.10.2",
    "eslint": "^8.57.0",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.3",
    "svgo": "^3.3.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "engines": {
    "node": ">=18.0.0"
  }
}
