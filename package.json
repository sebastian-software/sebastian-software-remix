{
  "name": "sebastian-software-remix",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "check-types": "tsc",
    "lint": "eslint .",
    "fix": "eslint --fix .; prettier --write .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "opt:svg": "svgo --folder app --recursive",
    "update:latest": "ncu --deep  --upgrade --interactive",
    "update:minor": "ncu --deep  --upgrade --interactive --target minor",
    "update:pnpm": "corepack up"
  },
  "dependencies": {
    "@remix-run/node": "^2.9.1",
    "@remix-run/react": "^2.9.1",
    "@remix-run/serve": "^2.9.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.5",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@effective/color": "^1.0.1",
    "@effective/css-reset": "^3.0.1",
    "@effective/eslint-config": "^5.4.4",
    "@remix-run/dev": "^2.9.1",
    "@storybook/react": "^8.0.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/css": "^1.14.2",
    "@vanilla-extract/vite-plugin": "^4.0.7",
    "@vercel/remix": "^2.9.0",
    "eslint": "^8.57.0",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.2.5",
    "svgo": "^3.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "packageManager": "pnpm@8.15.7+sha256.50783dd0fa303852de2dd1557cd4b9f07cb5b018154a6e76d0f40635d6cee019",
  "engines": {
    "node": ">=18.0.0"
  }
}
